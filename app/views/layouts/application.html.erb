<!DOCTYPE html>
<html>
<head>
  <title>WordOut</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header class="navbar navbar-fixed-top navbar-inverse">
		<div class="container">
			<%= link_to "Word Out", '#', id: "logo" %>
			<nav> 
				<ul class="nav navbar-nav pull-right">
					<li><%= link_to('Home', posts_url) %></li>
						<% if user_signed_in? %>
							<li id="fat-menu" class="dropdown">
            					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
              						Account <b class="caret"></b>
            					</a>
            					<ul class="dropdown-menu">
									<li><%= link_to "Profile", current_user %></li> 
									<li><%= link_to('New Poem', new_post_url) %></li>
									<li><%= link_to "Edit Profile", edit_user_registration_path %></li>
									<li class="divider"></li>
									<li><%= link_to('Sign Out', destroy_user_session_url, method: :delete) %></li>
								</ul>
								<li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
						<% else %>
							<li><%= link_to('Sign In', new_user_session_url) %></li>
						<% end %>
						
				</ul>
			</nav> 
		</div> 
	</header>
	<div class='container'> 

		<div class="flash-message"><%= flash[:info] %></div>

		<%= yield %>

	</div> 

</body>
</html>
