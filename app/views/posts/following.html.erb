<h1>Poems by Followed Poets</h1>

<div id="search-bar"> 
	<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search" %>
	<%= submit_tag "Search", :class => "btn btn-default" %>
	<% end %>
</div> 

<%= render('indextoggle') %> 

<div id="main"> 
<%= render(@posts) %>
</div> 
