<div class= "follow-button-<%= user.id %>"> 
      <% if current_user.follows?(user) %>
        <%= button_to('Unfollow', follow_path(user.id), method: :delete, remote: true) %>
      <% else %>
        <%= button_to('Follow', follows_path(id: user), method: :create, remote: true) %>
      <% end %>
    
</div> 