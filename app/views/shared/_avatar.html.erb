<div id="change-avatar"> 
		<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>   
		<%= f.label :Change_Profile_Picture? %> 
	<p> 
		<%= f.file_field :avatar %> 
	</p> 
	<p> 
		<%= f.submit "Update profile picture", :class => "btn btn-default"  %>
	</p>
<% end %>

</div>
