<div id="change-avatar"> 
		<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>   
		<%= form.label :Change_Profile_Picture? %> 
	<p> 
		<%= form.file_field :avatar %> 
	</p> 
	<p> 
		<%= form.submit "Update profile picture", :class => "btn btn-default"  %>
	</p>
<% end %>

</div>
