<h1> Users </h1> 
<div id="search-bar"> 
  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Find" %>
  <%= submit_tag "Find" %>
  <% end %>
</div> 
<div id= "main"> 
<p> 
  <% @users.each do |user| %>
    
      <%= link_to(user.email, user) %>
      <% if current_user.follows?(user) %>
        <%= button_to('Unfollow', follow_path(user.id), method: :delete) %>
      <% else %>
        <%= button_to('Follow', follows_path(id: user), method: :create) %>
      <% end %>
    
  <% end %>
</p> 
</div> 
