<h1> Poets </h1> 
<div id="search-bar"> 
  <%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Find" %>
  <%= submit_tag "Find" %>
  <% end %>
</div> 

<%= render('posts/indextoggle') %>  

<div id= "main"> 
<ul id="userlist"> 
  <% @users.each do |user| %>
  <li id="pic"> 
    <%= image_tag(user.avatar.url(:thumb)) %>
  </li> 
  <li id="follow-button"> 
      <%= link_to(user.displayname, user) %>
      <% if current_user.follows?(user) %>
        <%= button_to('Unfollow', follow_path(user.id), method: :delete) %>
      <% else %>
        <%= button_to('Follow', follows_path(id: user), method: :create) %>
      <% end %>
  <% end %>
  </li> 
</ul> 
</div> 
